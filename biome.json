{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useImportType": "off"
			}
		}
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"files": {
		"ignore": [
			"./.vscode/**",
			"./.husky/**",
			"./build/**",
			"./dist/**",
			"./.angular/**",
			"./binary.min.js",
			"./package.json",
			"./package-lock.json"
		]
	}
}
